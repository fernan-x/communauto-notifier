{
    "manifest_version": 3,
    "name": "Communauto Notifier",
    "description": "Get notified when a communauto car is availble near you",
    "version": "0.1",
    "action": {
      "default_popup": "index.html",
      "default_icon": "assets/logo_small.png"
    },
    "permissions": [
      "geolocation",
      "offscreen",
      "notifications",
      "storage"
    ],
    "host_permissions": [
      "https://www.reservauto.net/*"
    ],
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }